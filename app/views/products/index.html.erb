<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Proudctname</th>
      <th>Description</th>
      <th>Price</th>
      <th>Photo</th>
      <th>Buy</th>
      <th colspan="3">Show </th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.proudctname %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%  if product.has_photo? %>
            <%= image_tag product.photo_path, size:'50x50' %>
            <% else %>
            No photo.
            <% end %></td>
            <td> <%= link_to "Buy", new_sale_path(:product_id => product) %> </td>
        <td><%= link_to 'Show', product, class: 'show' %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New', new_product_path, class: 'new' %>
