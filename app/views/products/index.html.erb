<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Proudctname</th>
      <th>Description</th>
      <th>Price</th>
      <th>Photo</th>
      <th colspan="3">Show Edit Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.proudctname %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%  if product.has_photo? %>
            <%= image_tag product.photo_path, size:'50x50' %>
            <% else %>
            No photo.
            <% end %></td>
        <td><%= link_to 'Show', product, class: 'show' %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: 'edit' %></td>
        <td><%= link_to 'Destroy', product, class: 'destroy', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

